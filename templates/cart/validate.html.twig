{% extends 'base.html.twig' %}

{% block title %}{{ 'validate_goldman'|trans({}, 'validate_page')|raw }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/header.css') }}">
    <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
    <link rel="stylesheet" href="{{ asset('css/account.css') }}">
{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}

    <main class="account-page">
        <div class="account-container">
            {% if canBuy %}
                <div class="account-header">
                    {{ 'validate'|trans({}, 'validate_page')|raw }}
                    <p class="subtitle">{{ 'information'|trans({}, 'validate_page')|raw }}</p>
                </div>

                <section class="account-section">
                    <form method="post" class="checkout-form">
                        <div class="form-group">
                            {{ 'address'|trans({}, 'validate_page')|raw }}
                            <input type="text" name="adress" required placeholder={{ 'name_address'|trans({}, 'validate_page')|raw }}>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>{{ 'city'|trans({}, 'validate_page')|raw }}</label>
                                <input type="text" name="city" required placeholder={{ 'name_city'|trans({}, 'validate_page')|raw }}>
                            </div>

                            <div class="form-group">
                                {{ 'postal'|trans({}, 'validate_page')|raw }}
                                <input type="number" name="postalCode" required placeholder="75000">
                            </div>
                        </div>

                        <div class="order-summary">
                            {{ 'order'|trans({}, 'validate_page')|raw }}
                            <div class="summary-details">
                                <div class="summary-row">
                                    {{ 'see'|trans({}, 'validate_page')|raw }}
                                    <span>{{ total }}â‚¬</span>
                                </div>
                                <div class="summary-row">
                                    {{ 'delivery'|trans({}, 'validate_page')|raw }}
                                    {{ 'free'|trans({}, 'validate_page')|raw }}
                                </div>
                                <div class="summary-total">
                                    {{ 'pay'|trans({}, 'validate_page')|raw }}
                                    <span>{{ total }}â‚¬</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="submit-button">
                                <i class="fas fa-check"></i> {{ 'confirm'|trans({}, 'validate_page')|raw }}
                            </button>
                            <a href="/cart" class="cancel-button">
                                <i class="fas fa-arrow-left"></i> {{ 'return'|trans({}, 'validate_page')|raw }}
                            </a>
                        </div>
                    </form>
                </section>
            {% else %}
                <div class="error-container">
                    <div class="error-icon">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                   {{ 'insufficient'|trans({}, 'validate_page')|raw }}
                    {{ 'error'|trans({}, 'validate_page')|raw }}
                    <div class="error-actions">
                        <a href="{{ path('AccountPage') }}" class="primary-button">
                            <i class="fas fa-wallet"></i> {{ 'add'|trans({}, 'validate_page')|raw }}
                        </a>
                        <a href="{{ path('cart') }}" class="secondary-button">
                            <i class="fas fa-arrow-left"></i> {{ 'return'|trans({}, 'validate_page')|raw }}
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </main>

    {% include 'partials/footer.html.twig' %}
{% endblock %}
