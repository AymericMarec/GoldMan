{% extends 'base.html.twig' %}

{% block title %}{{ 'registration_goldman'|trans({}, 'register_page')|raw }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
<div class="auth-page">
    <video class="auth-background" autoplay l+oop muted>
        <source src="{{ asset('videos/luxury-background.mp4') }}" type="video/mp4">
    </video>
    
    <div class="auth-container">
        <div class="auth-header">
            <h1 class="auth-title">{{ 'registration'|trans({}, 'register_page')|raw }}</h1>
            <p class="auth-subtitle">{{ 'join'|trans({}, 'register_page')|raw }}</p>
        </div>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div class="form-group">
               <label for="username" class="form-label">{{ 'username'|trans({}, 'register_page')|raw }}</label>
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                <label for="password" class="form-label">{{ 'password'|trans({}, 'register_page')|raw }}</label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-check">
                {{ form_widget(registrationForm.agreeTerms) }}
                <label class="form-check-label">{{ 'agree'|trans({}, 'register_page')|raw }}</label>
            </div>

            <button type="submit" class="auth-button">{{ 'create'|trans({}, 'register_page')|raw }}</button>

            <div class="auth-links">
                <p>{{ 'registered'|trans({}, 'register_page')|raw }}<a href="{{ path('login') }}">{{ 'login'|trans({}, 'register_page')|raw }}</a></p>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
