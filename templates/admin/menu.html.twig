{% extends 'base.html.twig' %}

{% block title %}{{ 'admin_goldman'|trans({}, 'admin_page')|raw }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/header.css') }}">
    <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}

    <main class="admin-menu">
        <div class="menu-container">
            <div class="menu-header">
                {{ 'admin'|trans({}, 'admin_page')|raw }}
                {{ 'text1'|trans({}, 'admin_page')|raw }}
            </div>

            <div class="menu-grid">
                <a href="{{ path('adminUserPage') }}" class="menu-card">
                    <div class="menu-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h2 class="menu-title">{{ 'user_management'|trans({}, 'admin_page')|raw }}</h2>
                    <p class="menu-description">
                        {{ 'text2'|trans({}, 'admin_page')|raw }}
                    </p>
                </a>

                <a href="{{ path('adminMenuPage') }}" class="menu-card">
                    <div class="menu-icon">
                        <i class="fas fa-gem"></i>
                    </div>
                    <h2 class="menu-title">{{ 'article__management'|trans({}, 'admin_page')|raw }}</h2>
                    <p class="menu-description">
                        {{ 'text3'|trans({}, 'admin_page')|raw }}
                    </p>
                </a>
            </div>
        </div>
    </main>
{% endblock %}
