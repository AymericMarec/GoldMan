{% extends 'base.html.twig' %}

{% block title %}{{ 'sell_goldman'|trans({}, 'index_page')|raw }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/header.css') }}">
    <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
    <link rel="stylesheet" href="{{ asset('css/account.css') }}">
    <style>
        .account-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .account-header h1 {
            color: #d4af37;  /* Couleur or caractéristique de GOLDMAN */
            font-family: 'Cormorant Garamond', serif;
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .account-header .subtitle {
            color: #999;  /* Gris clair pour le sous-titre */
            font-size: 1.1rem;
            font-family: 'Montserrat', sans-serif;
        }

        /* Style pour que le formulaire Symfony garde l'apparence actuelle */
        .sell-form div > label {
            display: block;
            margin-bottom: 0.5rem;
            color: #333;
            font-weight: 500;
        }

        .sell-form div > input,
        .sell-form div > textarea {
            width: 100%;
            padding: 0.8rem;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        /* Cache le label du bouton submit généré par Symfony */
        .sell-form div > label[for$="_save"] {
            display: none;
        }

        /* Styles spécifiques pour le formulaire Symfony */
        .sell-form div {
            margin-bottom: 1.5rem;
        }

        .sell-form label {
            color: #d4af37 !important;
            font-family: 'Cormorant Garamond', serif !important;
            font-size: 1.1rem !important;
            margin-bottom: 0.8rem !important;
            display: block !important;
        }

        .sell-form input[type="text"],
        .sell-form input[type="number"],
        .sell-form textarea,
        .sell-form select {
            width: 100%;
            padding: 0.8rem;
            background: rgba(255,255,255,0.05);
            border: 1px solid #333;
            border-radius: 4px;
            color: #fff;
            font-family: 'Montserrat', sans-serif;
        }

        .sell-form button[type="submit"] {
            background: #d4af37;
            color: #000;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 4px;
            cursor: pointer;
            font-family: 'Cormorant Garamond', serif;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .sell-form button[type="submit"]:hover {
            background: #c4a032;
            transform: translateY(-2px);
        }

        /* Style pour l'upload d'image */
        .sell-form input[type="file"] {
            display: none;
        }

        .product-image-label {
            display: block;
            padding: 2rem;
            border: 2px dashed #333;
            border-radius: 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .product-image-label:hover {
            border-color: #d4af37;
        }

        .image-preview {
            margin-top: 1rem;
            width: 100%;
            height: 200px;
            background-size: cover;
            background-position: center;
            border-radius: 4px;
            display: none;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}

    <main class="account-page">
        <div class="account-container">
            <div class="account-header">
                {{ 'sell'|trans({}, 'index_page')|raw }}
                <p class="subtitle">{{ 'text1'|trans({}, 'index_page')|raw }}</p>
            </div>

            <section class="account-section">
                {{ form_start(article_form, {
                    'attr': {
                        'class': 'sell-form',
                        'enctype': 'multipart/form-data'
                    }
                }) }}
                
                <div class="form-group">
                    {{ form_label(article_form.image, 'picture_article'|trans({}, 'index_page')|raw) }}
                    <div class="product-image-upload">
                        {{ form_widget(article_form.image, {
                            'attr': {
                                'class': 'file-input',
                                'id': 'productImage',
                                'accept': 'image/*'
                            }
                        }) }}
                        <label for="article_form_image" class="product-image-label">
                            <div class="upload-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <div class="upload-text">
                                <span class="primary-text">{{ 'text2'|trans({}, 'index_page')|raw }}</span>
                                <span class="secondary-text">{{ 'text3'|trans({}, 'index_page')|raw }}</span>
                            </div>
                        </label>
                        <div id="imagePreview" class="image-preview"></div>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(article_form.name, 'name'|trans({}, 'index_page')|raw ) }}
                    {{ form_widget(article_form.name, {
                        'attr': {
                            'placeholder': 'ex_name'|trans({}, 'index_page')|raw
                        }
                    }) }}
                </div>

                <div class="form-group">
                    {{ form_label(article_form.description, 'description'|trans({}, 'index_page')|raw) }}
                    {{ form_widget(article_form.description, {
                        'attr': {
                            'placeholder': 'ex_desc'|trans({}, 'index_page')|raw
                        }
                    }) }}
                </div>

                <div class="form-group">
                    {{ form_label(article_form.price, 'price'|trans({}, 'index_page')|raw) }}
                    <div class="price-input">
                        {{ form_widget(article_form.price, {
                            'attr': {
                                'min': '0',
                                'step': '0.01',
                                'placeholder': '0.00'
                            }
                        }) }}
                        <span class="currency">€</span>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(article_form.stock, 'quantity'|trans({}, 'index_page')|raw) }}
                    <div class="stock-input">
                        {{ form_widget(article_form.stock, {
                            'attr': {
                                'min': '0',
                                'step': '1',
                                'placeholder': 'Ex: 1'
                            }
                        }) }}
                        <span class="unit">{{ 'unit'|trans({}, 'index_page')|raw }}</span>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_widget(article_form.save, {
                        'attr': {
                            'class': 'submit-button'
                        },
                        'label': 'publish_article'|trans({}, 'index_page')|raw
                    }) }}
                </div>

                {{ form_end(article_form) }}
            </section>
        </div>
    </main>

    {% include 'partials/footer.html.twig' %}
{% endblock %}

{% block javascripts %}
<script>
document.getElementById('productImage').addEventListener('change', function(e) {
    const file = e.target.files[0];
    const preview = document.getElementById('imagePreview');
    
    if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
            preview.style.backgroundImage = `url(${e.target.result})`;
            preview.style.display = 'block';
        }
        reader.readAsDataURL(file);
    }
});
</script>
{% endblock %}
