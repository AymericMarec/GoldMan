{% extends 'base.html.twig' %}

{% block title %}{{ 'error_goldman'|trans({}, 'error404_page')|raw }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/header.css') }}">
    <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
    <link rel="stylesheet" href="{{ asset('css/account.css') }}">
    <style>
        .error-404 {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #000;
            padding: 2rem;
        }

        .error-content {
            text-align: center;
            max-width: 600px;
            padding: 4rem 2rem;
            background: rgba(17, 17, 17, 0.95);
            border-radius: 8px;
            border: 1px solid #222;
            position: relative;
            overflow: hidden;
        }

        .error-content::before {
            content: '404';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 15rem;
            font-family: 'Cormorant Garamond', serif;
            color: rgba(212, 175, 55, 0.03);
            z-index: 0;
        }

        .error-icon {
            position: relative;
            font-size: 4rem;
            color: #d4af37;
            margin-bottom: 2rem;
            z-index: 1;
        }

        .error-title {
            position: relative;
            color: #d4af37;
            font-family: 'Cormorant Garamond', serif;
            font-size: 2.5rem;
            margin-bottom: 1rem;
            z-index: 1;
        }

        .error-message {
            position: relative;
            color: #999;
            font-size: 1.1rem;
            margin-bottom: 2rem;
            line-height: 1.6;
            z-index: 1;
        }

        .error-actions {
            position: relative;
            display: flex;
            gap: 1rem;
            justify-content: center;
            z-index: 1;
        }

        .home-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 2rem;
            background: #d4af37;
            color: #000;
            border: none;
            border-radius: 4px;
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.1rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .home-button:hover {
            background: #c4a032;
            transform: translateY(-2px);
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 2rem;
            background: transparent;
            border: 1px solid #666;
            color: #666;
            border-radius: 4px;
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.1rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .back-button:hover {
            border-color: #999;
            color: #999;
            transform: translateY(-2px);
        }

        @media (max-width: 768px) {
            .error-content::before {
                font-size: 10rem;
            }

            .error-actions {
                flex-direction: column;
            }

            .error-title {
                font-size: 2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <main class="error-404">
        <div class="error-content">
            <div class="error-icon">
                <i class="fas fa-gem"></i>
            </div>
            <h1 class="error-title">{{ 'not_found'|trans({}, 'error404_page')|raw }}</h1>
            <p class="error-message">
               {{ 'text'|trans({}, 'error404_page')|raw }}
            </p>
            <div class="error-actions">
                <a href="/" class="home-button">
                    <i class="fas fa-home"></i>  {{ 'return'|trans({}, 'error404_page')|raw }} 
                </a>
                <a href="javascript:history.back()" class="back-button">
                    <i class="fas fa-arrow-left"></i>  {{ 'previous'|trans({}, 'error404_page')|raw }} 
                </a>
            </div>
        </div>
    </main>
{% endblock %}