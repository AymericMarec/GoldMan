{% extends 'base.html.twig' %}

{% block title %}Détails de l'article{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Détails de l'article "{{ article.name }}"</h1>

    <p><strong>Description :</strong> {{ article.description }}</p>
    <p><strong>Prix :</strong> {{ article.price }}€</p>
    <p><strong>Date de publication :</strong> {{ article.publicationDate|date('d/m/Y') }}</p>
    <p><strong>Créé par :</strong> {{ article.CreatorID.email }}</p>
    <p><strong>Image :</strong> <img src="{{ asset('images/' ~ article.image) }}" alt="{{ article.name }}" /></p>
    
    <h3>Stock :</h3>
    {% if article.stock %}
        <p>Quantité disponible : {{ article.stock.nbStock }}</p>
    {% else %}
        <p>Stock non disponible.</p>
    {% endif %}

    {% if app.user and app.user != article.creatorID %}
        <form action="{{ path('app_add_to_cart', {id: article.id}) }}" method="POST">
            <button type="submit">Ajouter au panier</button>
        </form>
    {% elseif app.user %}
        <p>Vous ne pouvez pas ajouter votre propre article au panier.</p>
    {% endif %}
</div>
{% endblock %}
