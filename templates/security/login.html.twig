{% extends 'base.html.twig' %}

{% block title %}{{ 'connection_goldman'|trans({}, 'login_page')|raw }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
<div class="auth-page">
    <video class="auth-background" autoplay loop muted>
        <source src="{{ asset('videos/luxury-background.mp4') }}" type="video/mp4">
    </video>
    
    <div class="auth-container">
        <div class="auth-header">
            <h1 class="auth-title">{{ 'connection'|trans({}, 'login_page')|raw }}</h1>
            <p class="auth-subtitle">{{ 'access'|trans({}, 'login_page')|raw }}</p>
        </div>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group">
                <label for="username" class="form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" required autofocus>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">{{ 'password'|trans({}, 'login_page')|raw }}</label>
                <input type="password" name="_password" id="password" class="form-control" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-check">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label class="form-check-label" for="_remember_me">{{ 'remember'|trans({}, 'login_page')|raw }}</label>
            </div>

            <button class="auth-button" type="submit">{{ 'login'|trans({}, 'login_page')|raw }}</button>

            <div class="auth-links">
                <p>{{ 'nothing'|trans({}, 'login_page')|raw }}<a href="{{ path('app_register') }}">{{ 'account'|trans({}, 'login_page')|raw }}</a></p>
            </div>
        </form>
    </div>
</div>
{% endblock %}